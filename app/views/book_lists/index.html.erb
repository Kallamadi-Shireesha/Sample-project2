<p id="notice"><%= notice %></p>

<h1>Book Lists</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Name</th>
      <th>Description</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_lists.each do |book_list| %>
      <tr>
        <td><%= book_list.book_id %></td>
        <td><%= book_list.name %></td>
        <td><%= book_list.description %></td>
        <td><%= book_list.books_id %></td>
        <td><%= link_to 'Show', book_list %></td>
        <td><%= link_to 'Edit', edit_book_list_path(book_list) %></td>
        <td><%= link_to 'Destroy', book_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

